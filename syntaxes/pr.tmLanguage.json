{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Project Reality",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#declarations"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#statements"
        },
        {
            "include": "#branches"
        }
    ],
    "repository": {
        "branches": {
            "comment": "Control flow",
            "begin": "\\b(if|while|for|return) (.*) (.*) (.*)",
            "beginCaptures": {
                "1": {
                    "name": "keyword.control"
                },
                "2": {
                    "patterns": [
                        {
                            "include": "#arguments"
                        }
                    ]
                },
                "3": {
                    "name": "keyword.operator"
                },
                "4": {
                    "patterns": [
                        {
                            "include": "#arguments"
                        }
                    ]
                }
            },
            "patterns": [
                {
                    "include": "#comments"
                },
                {
                    "include": "#declarations"
                },
                {
                    "include": "#variables"
                },
                {
                    "include": "#branches"
                },
                {
                    "include": "#statements"
                },
                {
                    "name": "keyword.control",
                    "match": "\\b(elseIf) (.*) (.*) (.*)",
                    "captures": {
                        "1": {
                            "name": "keyword.control"
                        },
                        "2": {
                            "patterns": [
                                {
                                    "include": "#arguments"
                                }
                            ]
                        },
                        "3": {
                            "name": "keyword.operator"
                        },
                        "4": {
                            "patterns": [
                                {
                                    "include": "#arguments"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "keyword.control",
                    "match": "\\b(else|return)\\b"
                }
            ],
            "end": "(endIf)\\s*$",
            "endCaptures": {
                "1": {
                    "name": "keyword.control"
                }
            }
        },
        "variables": {
            "comment": "Declaring custom variables",
            "patterns": [
                {
                    "comment": "Declaration without initialization",
                    "match": "^\\s*(var) (\\w+)\\s*$",
                    "captures": {
                        "1": {
                            "name": "support.type"
                        },
                        "2": {
                            "name": "support.variable"
                        }
                    }
                },
                {
                    "comment": "Declaration with initialization",
                    "match": "^\\s*\\b(var) (\\w+) (.*) (.*)\\s*$",
                    "captures": {
                        "1": {
                            "name": "support.type"
                        },
                        "2": {
                            "name": "support.variable"
                        },
                        "3": {
                            "name": "keyword.operator"
                        },
                        "4": {
                            "patterns": [
                                {
                                    "include": "#arguments"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        "statements": {
            "comment": "Configuration options, such as ObjectTemplate",
            "begin": "\\b([^\\.]+)\\.(\\S+)\\b",
            "beginCaptures": {
                "1": {
                    "name": "support.variable"
                },
                "2": {
                    "name": "support.function"
                }
            },
            "patterns": [
                {
                    "include": "#arguments"
                }
            ],
            "end": "\\s*$"
        },
        "arguments": {
            "patterns": [
                {
                    "name": "constant.numeric",
                    "match": "[\\.\\-\\+\\deE]*\\d+[\\.\\d\/]*"
                },
                {
                    "name": "string",
                    "match": "\\b[\\w\/]+\\.\\w+\\b"
                },
                {
                    "name": "string",
                    "match": "\".*\""
                },
                {
                    "name": "variable.name",
                    "match": "\\b\\w+\\b"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line",
                    "match": "^(?:rem ).*$"
                },
                {
                    "name": "comment.block",
                    "begin": "\\b(?:beginrem)\\b",
                    "end": "\\b(?:endrem)\\b"
                }
            ]
        },
        "declarations": {
            "comment": "Declarations, such as file runs and includes",
            "begin": "^\\s*\\b(run|include) ([\\w+\\/\\.]+)",
            "beginCaptures": {
                "1": {
                    "name": "support.function"
                },
                "2": {
                    "name": "string"
                }
            },
            "patterns": [
                {
                    "include": "#arguments"
                }
            ],
            "end": "\\s*$"
        }
    },
    "scopeName": "source.pr"
}